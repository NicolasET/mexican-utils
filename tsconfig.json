{
  "include": ["src/**/*"],
  "exclude": ["build", "node_modules"],
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
    "moduleResolution": "node",
		"rootDir": "./src",
		"sourceMap": true,
		"outDir": "dist",
    "declaration": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
}
